{
  "name": "ai-cms-monorepo",
  "version": "1.0.0",
  "description": "Enterprise AI-powered CMS platform with Next.js and NestJS",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "engines": {
    "node": ">=24.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "concurrently -n backend,frontend -c blue,green \"npm run dev --workspace=backend\" \"npm run dev --workspace=frontend\"",
    "build": "npm run build --workspaces --if-present",
    "start": "concurrently -n backend,frontend -c blue,green \"npm run start:prod --workspace=backend\" \"npm run start --workspace=frontend\"",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "docker:dev": "docker-compose up -d",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d --build",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "db:migrate": "npm run db:migrate --workspace=backend",
    "db:seed": "npm run db:seed:full --workspace=backend",
    "db:reset": "npm run db:migrate:reset --workspace=backend",
    "backup": "bash backup.sh",
    "deploy": "bash deploy.sh",
    "health": "curl http://localhost:3001/health && curl http://localhost:3000/api/health"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "prettier": "^3.2.5"
  },
  "keywords": [
    "cms",
    "ai",
    "blog",
    "nextjs",
    "nestjs",
    "typescript",
    "prisma",
    "postgresql"
  ],
  "author": "Your Company",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/wallpaintingservices.git"
  }
}
