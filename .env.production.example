# ============================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ============================================
# Copy this to .env.production and fill with real values
# NEVER commit actual .env.production to version control!

# --------------------------------------------------------
# APPLICATION
# --------------------------------------------------------
NODE_ENV=production
PORT=3001
HOST=0.0.0.0
TRUST_PROXY=true
FRONTEND_URL=https://yourdomain.com
PRODUCTION_URL=https://yourdomain.com

# --------------------------------------------------------
# DATABASE CONNECTION
# --------------------------------------------------------
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE_NAME?schema=public
DATABASE_URL="postgresql://cms_admin:CHANGE_THIS_STRONG_PASSWORD_123@db-host:5432/cms_ai_db?schema=public"

# --------------------------------------------------------
# SECURITY SECRETS (REQUIRED)
# --------------------------------------------------------
# Use 32+ character random secrets
JWT_SECRET=CHANGE_ME_32_PLUS_CHARS
JWT_REFRESH_SECRET=CHANGE_ME_32_PLUS_CHARS
APP_SECRET=CHANGE_ME_32_PLUS_CHARS
COOKIE_SECRET=CHANGE_ME_32_PLUS_CHARS

# Cookie settings
COOKIE_SECURE=true
COOKIE_SAMESITE=lax
COOKIE_DOMAIN=yourdomain.com

# --------------------------------------------------------
# AI PROVIDER
# --------------------------------------------------------
AI_API_KEY=CHANGE_ME

# --------------------------------------------------------
# MAIL (SMTP)
# --------------------------------------------------------
MAIL_HOST=smtp.yourdomain.com
MAIL_PORT=587
MAIL_USER=mailer@yourdomain.com
MAIL_PASS=CHANGE_ME
MAIL_FROM="Your Site <mailer@yourdomain.com>"

# --------------------------------------------------------
# GOOGLE reCAPTCHA
# --------------------------------------------------------
RECAPTCHA_V2_SITE_KEY=CHANGE_ME
RECAPTCHA_V2_SECRET_KEY=CHANGE_ME
RECAPTCHA_V3_SITE_KEY=CHANGE_ME
RECAPTCHA_V3_SECRET_KEY=CHANGE_ME

# --------------------------------------------------------
# OPTIONAL FLAGS
# --------------------------------------------------------
SWAGGER_ENABLED=false
