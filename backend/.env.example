# ======================================================================
# PRODUCTION-READY ENVIRONMENT CONFIGURATION
# ======================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!
# ======================================================================

# ----------------------------------------------------------------------
# APPLICATION SETTINGS
# ----------------------------------------------------------------------
NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# ----------------------------------------------------------------------
# FRONTEND URL (Required)
# ----------------------------------------------------------------------
FRONTEND_URL=https://your-domain.com
PRODUCTION_URL=https://your-domain.com

# ----------------------------------------------------------------------
# DATABASE (PostgreSQL) - Required
# ----------------------------------------------------------------------
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
# Example: postgresql://postgres:SecurePass123@localhost:5432/cms_ai_db?schema=public
DATABASE_URL="postgresql://user:password@localhost:5432/cms_ai_db?schema=public"

# Database connection pool settings (optional, for optimization)
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# ----------------------------------------------------------------------
# SECURITY SECRETS (Required - Generate Strong Random Strings)
# ----------------------------------------------------------------------
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_MIN_64_CHARS
APP_SECRET=CHANGE_THIS_TO_ANOTHER_SECURE_RANDOM_STRING_MIN_64_CHARS

# JWT Token Expiration
JWT_EXPIRATION=7d

# ----------------------------------------------------------------------
# AI/LLM API KEYS
# ----------------------------------------------------------------------
# OpenAI API Key (for AI content generation)
AI_API_KEY=sk-your-openai-api-key-here
AI_PROVIDER=openai
AI_MODEL=gpt-4

# Alternative AI Providers (uncomment if using)
# ANTHROPIC_API_KEY=your-anthropic-key
# COHERE_API_KEY=your-cohere-key

# ----------------------------------------------------------------------
# GOOGLE reCAPTCHA (Highly Recommended)
# ----------------------------------------------------------------------
# Get keys from: https://www.google.com/recaptcha/admin
RECAPTCHA_V2_SITE_KEY=your-recaptcha-v2-site-key
RECAPTCHA_V2_SECRET_KEY=your-recaptcha-v2-secret-key

# reCAPTCHA v3 (for invisible protection)
RECAPTCHA_V3_SITE_KEY=your-recaptcha-v3-site-key
RECAPTCHA_V3_SECRET_KEY=your-recaptcha-v3-secret-key

# ----------------------------------------------------------------------
# EMAIL/SMTP CONFIGURATION (For password resets, notifications)
# ----------------------------------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@your-domain.com

# ----------------------------------------------------------------------
# REDIS (Optional - For Caching & Session Management)
# ----------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ----------------------------------------------------------------------
# FILE STORAGE & CDN
# ----------------------------------------------------------------------
# Local storage path
UPLOAD_DIR=./uploads
MAX_FILE_SIZE_MB=10

# AWS S3 (optional, for cloud storage)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-bucket-name

# Cloudflare/CDN
# CDN_URL=https://cdn.your-domain.com

# ----------------------------------------------------------------------
# SEO & ANALYTICS
# ----------------------------------------------------------------------
SITE_NAME="AI CMS Platform"
SITE_URL=https://your-domain.com
SITE_DESCRIPTION="Enterprise AI-powered content management system"

# Google Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX

# Google Search Console
GOOGLE_SITE_VERIFICATION=your-verification-code

# Bing Webmaster
BING_SITE_VERIFICATION=your-bing-verification-code

# ----------------------------------------------------------------------
# RATE LIMITING
# ----------------------------------------------------------------------
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Auth-specific rate limits
AUTH_RATE_LIMIT_TTL=900
AUTH_RATE_LIMIT_MAX=5

# ----------------------------------------------------------------------
# LOGGING & MONITORING
# ----------------------------------------------------------------------
LOG_LEVEL=info
LOG_FORMAT=json

# Sentry (for error tracking)
# SENTRY_DSN=your-sentry-dsn

# ----------------------------------------------------------------------
# FEATURE FLAGS
# ----------------------------------------------------------------------
ENABLE_AI_GENERATION=true
ENABLE_AUTO_PUBLISHING=false
ENABLE_SOCIAL_SHARING=true
ENABLE_COMMENTS=true
ENABLE_REGISTRATION=true

# ----------------------------------------------------------------------
# SECURITY HEADERS
# ----------------------------------------------------------------------
FORCE_HTTPS=true
ENABLE_HSTS=true
ENABLE_CSP=true

# ----------------------------------------------------------------------
# DEVELOPMENT ONLY (Remove in production)
# ----------------------------------------------------------------------
# DEBUG=true
# SWAGGER_ENABLED=true
