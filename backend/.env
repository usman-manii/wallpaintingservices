# --------------------------------------------------------
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# --------------------------------------------------------
# DATABASE CONNECTION
# --------------------------------------------------------
# Since you have local PostgreSQL installed, replace the values below:
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE_NAME
# Example: postgresql://postgres:mypassword@localhost:5432/cms_db

DATABASE_URL="postgresql://postgres:A1357@localhost:5432/cms_ai_db?schema=public"

# --------------------------------------------------------
# SECURITY SECRETS (REQUIRED)
# --------------------------------------------------------
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production-min-32-chars-1234567890abcdef
