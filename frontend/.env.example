# Frontend Environment Variables

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME=Wall Painting Services

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001

# Top Bar (public header) - opt-in
NEXT_PUBLIC_ENABLE_TOP_BAR=false

# SEO & Analytics
NEXT_PUBLIC_GOOGLE_VERIFICATION=your-google-site-verification-code
NEXT_PUBLIC_BING_VERIFICATION=your-bing-verification-code
NEXT_PUBLIC_YANDEX_VERIFICATION=your-yandex-verification-code
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX

# Social Media
NEXT_PUBLIC_TWITTER_HANDLE=@wallpaintingservices
NEXT_PUBLIC_FACEBOOK_APP_ID=your-facebook-app-id

# reCAPTCHA
NEXT_PUBLIC_RECAPTCHA_SITE_KEY_V2=your-recaptcha-v2-site-key
NEXT_PUBLIC_RECAPTCHA_SITE_KEY_V3=your-recaptcha-v3-site-key

# Feature Flags
NEXT_PUBLIC_ENABLE_COMMENTS=true
NEXT_PUBLIC_ENABLE_SOCIAL_SHARING=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
